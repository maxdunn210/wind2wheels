.container
  .bs-docs-section
    .row
      .col-lg-12
        #ajax
          = render 'charging'

:javascript

  function update() {
  $.ajax({
      type: 'GET',
      url: '/car_app/charging',
      timeout: 2000,
      success: function(data) {
        if ($('#ajax').length) {
          $('#ajax').html(data);
          window.setTimeout(update, 1000);
        }
      }
    });
  }
  update();

